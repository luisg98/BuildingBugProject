<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tituloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:fontFamily="serif"
        android:text="Ganhos desta semana"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/purple"
        android:textSize="24sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/ganhosTextView"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_below="@id/tituloTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape_ring_placeholder"
        android:gravity="center"
        android:text="7.32€"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/firstRowButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ganhosTextView"
        android:layout_marginStart="4dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Botão "Ver os meus serviços" -->
        <Button
            android:id="@+id/verServicosButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple"
            android:text="Ver os meus serviços"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/procurarServicosButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple"
            android:text="Procurar serviços"
            app:cornerRadius="8dp" />
    </LinearLayout>

    <!-- Segunda linha de botões -->
    <LinearLayout
        android:id="@+id/secondRowButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstRowButtons"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Botão "Perfil" -->
        <Button
            android:id="@+id/perfilButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple"
            android:text="Perfil"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple"
            android:text="Logout"
            app:cornerRadius="8dp" />
    </LinearLayout>

</RelativeLayout>
