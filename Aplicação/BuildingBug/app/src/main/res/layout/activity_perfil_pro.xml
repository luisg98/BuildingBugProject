<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilProActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="30dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tituloTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Perfil do Utilizador"
            android:textColor="@color/purple"
            android:textSize="24sp" />


        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="Email"
            android:inputType="text"
            android:padding="10dp"
            android:enabled="false"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@id/tituloTextView" />

        <EditText
            android:id="@+id/nomeEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:hint="Nome"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@+id/emailEditText"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/apelidoEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:hint="Apelido"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/nomeEditText"
            tools:layout_editor_absoluteX="0dp" />


        <EditText
            android:id="@+id/contactoEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:hint="Contacto"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/alterarButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/purple"
            android:text="Alterar Dados"
            android:textSize="20sp"
            app:cornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/contactoEditText"
            tools:layout_editor_absoluteX="16dp" />

        <Button
            android:id="@+id/alterarSenhaButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/black"
            android:text="Redefinir Senha"
            android:textSize="20sp"
            app:cornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/contactoEditText"
            tools:layout_editor_absoluteX="16dp" />

        <Button
            android:id="@+id/apagarContaButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/red"
            android:text="Apagar Conta"
            android:textSize="20sp"
            app:cornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@+id/AlterarSenhaButton"
            tools:layout_editor_absoluteX="16dp" />




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>